# Immich Configuration
IMMICH_BASE_URL=https://your-immich-server.com
IMMICH_API_KEY=your-api-key-with-required-scopes

# Processing Configuration
CONFIDENCE_THRESHOLD=0.35
BATCH_SIZE=25
PROCESSED_TAG_NAME=auto:processed
TAG_CACHE_TTL=300

# Logging
LOG_LEVEL=INFO

# Optional: Model Configuration
TAGGING_MODEL=wd14  # Options: wd14, deepdanbooru
MODEL_CACHE_DIR=/app/models

# Optional: Performance Tuning
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=30.0

# Optional: Scheduling Configuration (for scheduler mode)
ENABLE_SCHEDULER=true
CRON_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)
TIMEZONE=UTC
